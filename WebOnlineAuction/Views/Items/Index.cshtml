@model IEnumerable<WebDAL.DataModels.Items>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<div class="container">
    <div class="row">
        <!-- Tab panes -->
        <div class="tab-content" style="margin-top: 20px">
            <div role="tabpanel" class="tab-pane fade in active" id="tab_01">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        TimeSpan time = item.BidEndDate - DateTime.Now;
                        <div class="col-lg-4 col-sm-6">
                            <div class="singleProduct01 text-center">
                                <div class="productThumb01">
                                    <img src="@Url.Content(item.ItemImage)" alt="" width="50" height="200" />

                                </div>
                                <div class="productDesc01">
                                    <h5><a href="shop_single.html" class="poppins">@item.ItemTitle</a></h5>
                                    <div class="time" id="time" time-set="y"></div>
                                    <button class="Price" type="submit" style="border:none;border-radius: 20px;background: #fd8e2fff;color: #fff"><i class="fa fa-gavel" aria-hidden="true"></i></button>@item.BidIncrement
                                </div>
                            </div>
                        </div>
                        <script>

                            // Update the count down every 1 second
                            var x = setInterval(function () {
                                // Time calculations for days, hours, minutes and seconds
                                var days = Math.floor((@item) / (1000 * 60 * 60 * 24));
                                var hours = Math.floor(((@item) % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                                var minutes = Math.floor(((@item) % (1000 * 60 * 60)) / (1000 * 60));
                                var seconds = Math.floor(((@item) % (1000 * 60)) / 1000);

                                // Display the result in the element with id="demo"
                                document.getElementById("time").innerHTML = days + "d " + hours + "h "
                                    + minutes + "m " + seconds + "s ";

