
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin Page</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Areas/Admin/Assests/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/Assests/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/Areas/Admin/Assests/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/Areas/Admin/Assests/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="~/Areas/Admin/Assests/images/logo.svg">
                            </div>
                            <h4>Hello! let's get started</h4>
                            <h6 class="font-weight-light">Sign in to continue.</h6>
                            <form class="pt-3">
                                <div class="form-group">
                                    <input type="text" name="loginName" class="form-control form-control-lg" id="loginName" placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" class="form-control form-control-lg" id="password" placeholder="Password">
                                </div>
                                <div class="mt-3">
                                    <a class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" onclick="Login()">SIGN IN</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Areas/Admin/Assests/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Areas/Admin/Assests/js/off-canvas.js"></script>
    <script src="~/Areas/Admin/Assests/js/hoverable-collapse.js"></script>
    <script src="~/Areas/Admin/Assests/js/misc.js"></script>
    <script>
        function Login() {
            $.ajax({
                type: "POST",
                url: '@Url.Action("Login","Home")',
                data: {
                    loginName: $('#loginName').val(),
                    password: $('#password').val()
                },
                success: function (res) {
                    console.log("alo ali");
                    if (res.status == true) {
                        alert(res.message);
                        window.location = "https://localhost:44382/Admin/Home";
                    } else {
                        alert(res.message);
                    }
                }
            });
        }
    </script>
    <!-- endinject -->
</body>
</html>
